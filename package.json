{
  "name": "church-tap",
  "version": "1.0.0",
  "description": "NFC-powered church engagement platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./public/src/input.css -o ./public/css/style.css --watch",
    "db:init": "node scripts/init-postgres.js",
    "setup": "npm run db:init && node scripts/setup-initial-data.js",
    "setup:full": "npm install && npm run build:css:once && npm run setup",
    "build:css:once": "tailwindcss -i ./public/src/input.css -o ./public/css/style.css"
  },
  "keywords": [
    "nfc",
    "bible",
    "verse",
    "spiritual",
    "church"
  ],
  "author": "Your Church",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "validator": "^13.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.3.6"
  }
}
